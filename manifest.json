{
  "manifest_version": 3,
  "name": "Base64 Observer",
  "version": "0.1",
  "description": "Detect & Decode base64 encoded text in current web page",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/src/content-script_start.js"],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_title": "Base64 Observer"
  },

  "permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
